<v:view
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase" 
	useController="dialogViewContainerController" 
	onLoad="dialogViewContainerController.onLoad" 
	title="${messages_dialogViewContainer.title}"> 

	<center>
		<crux:dialogViewContainer id="dialogViewContainer"
			animationEnabled="true" width="600px" height="400px"
			onDettach="dialogViewContainerController.onLoad">
			<crux:view name="simpleView1" />
		</crux:dialogViewContainer>

		<crux:styledPanel id="mainPanel">
			<crux:button id="buttonShowDialog" text="${messages_dialogViewContainer.buttonShowDialog}"
				onSelect="dialogViewContainerController.openDialog" />
		</crux:styledPanel>

		<showcase:info title="${messages_dialogViewContainer.title}">
			<showcase:description>
				<gwt:HTML id="htmlDescText" />
			</showcase:description>
		</showcase:info>

	</center>

</v:view>