<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	onLoad="messageBoxController.onLoad"
	useController="messageBoxController" 
	title="MessageBox"> 

	<center>
	<!-- 		Component use sample  -->
		<crux:styledPanel id="styled">
			<gwt:flowPanel id="flow" width="100%">
				<crux:button id="showMessageBtnInfo"
					text="Show Info" onSelect="messageBoxController.showInfo"/>
				<crux:button id="showMessageBtnSuccess"
					text="Show Success" onSelect="messageBoxController.showSuccess"/>
				<crux:button id="showMessageBtnWarn"
					text="Show warn" onSelect="messageBoxController.showWarn"/>
				<crux:button id="showMessageBtnError"
					text="Show Error" onSelect="messageBoxController.showError"/>
			</gwt:flowPanel>
		</crux:styledPanel>

		<!-- 		Component description -->
		<showcase:info title="MessageBox">
			<showcase:description>
				<gwt:HTML id="componentDescription"/>
			</showcase:description>
		</showcase:info>

	</center>

</v:view>