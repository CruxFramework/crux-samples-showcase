<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view"
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt" 
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="textAreaController" 
	onLoad="textAreaController.onLoad"
	title="${messages_textArea.title}">

	<center>
		<crux:styledPanel id="painel">
			<gwt:HTMLPanel id="StatesWrapper">
				<crux:formDisplay id="form">
					<crux:entry>
						<gwt:label id="labelText" text="${messages_textArea.labelText}" />
					</crux:entry>
					<crux:entry>
						<crux:textArea id="textArea" width="400px"
							visibleLines="8" focus="true" text="${messages_textArea.textArea}" />
					</crux:entry>
					<crux:entry>
						<gwt:HTMLPanel id="limitLengthWrapper" styleName="cf">
							<gwt:textBox id="textBox" width="50px" value="150" />
							<crux:button id="applyButton" text="${messages_textArea.applyButton}"
								onSelect="textAreaController.applyMaxLength" styleName="crux-Button rs-right" />
						</gwt:HTMLPanel>
					</crux:entry>
				</crux:formDisplay>
				<hr />
				<h4>
					<gwt:label id="h4" text="${messages_textArea.h4}" />
				</h4>
				<div class="btn-Group">
					<gwt:radioButton name="color"
						onChange="textAreaController.handleDefault" id="radioDefault"
						text="${messages_textArea.radioDefault}" checked="true"></gwt:radioButton>
					<gwt:radioButton name="color"
						onChange="textAreaController.handleSuccess" id="radioSuccess"
						text="${messages_textArea.radioSuccess}"></gwt:radioButton>
					<gwt:radioButton name="color"
						onChange="textAreaController.handleWarning" id="radioWarning"
						text="${messages_textArea.radioWarning}"></gwt:radioButton>
					<gwt:radioButton name="color"
						onChange="textAreaController.handleError" id="radioError"
						text="${messages_textArea.radioError}"></gwt:radioButton>
				</div>
			</gwt:HTMLPanel>
		</crux:styledPanel>

		<showcase:info title="${messages_textArea.title}">
			<showcase:description>
				<gwt:HTML id="htmlDescText"/>
			</showcase:description>
		</showcase:info>

	</center>

</v:view>