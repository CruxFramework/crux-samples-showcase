<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view"
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt" 
	xmlns:faces="http://www.cruxframework.org/crux/faces"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="listShuttleController" 
	onLoad="listShuttleController.onLoad"
	title="${messages_listShuttle.title}">

	<center>

		<crux:styledPanel id="panel" styleName="listShuttlePanel">
			<gwt:HTMLPanel id="wrapper" styleName="center">
				<gwt:label id="labelChoosePlayers" text="${messages_listShuttle.labelChoosePlayers}" />
				<crux:listShuttle id="listShuttle"
					availableHeader="${messages_listShuttle.availableHeader}"
					selectedHeader="${messages_listShuttle.selectedHeader}" />
			</gwt:HTMLPanel>
		</crux:styledPanel>

		<showcase:info title="${messages_listShuttle.title}">
			<showcase:description>
				<gwt:HTML id="htmlDescText"/>
			</showcase:description>
		</showcase:info>

	</center>

</v:view>