<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="styledPanelController" 
	onLoad="styledPanelController.onLoad" 
	title="${messages_styledPanel.title}">

	<center>

		<gwt:HTMLPanel id="styledWrap" styleName="styledWrap center">
			<crux:styledPanel id="panel1" height="110px" width="200px"
				styleName="rs-left">
				<crux:button id="btnSample" text="${messages_styledPanel.btnSample}" />
			</crux:styledPanel>
			<crux:styledPanel id="panel2" height="110px" width="200px"
				styleName="rs-left">
				<gwt:label id="txtSample" text="${messages_styledPanel.txtSample}" />
			</crux:styledPanel>
			<gwt:simplePanel id="clear" styleName="clear"></gwt:simplePanel>
		</gwt:HTMLPanel>

		<showcase:info title="${messages_styledPanel.title}">
			<showcase:description>
				<gwt:HTML id="htmlDescText"/>
			</showcase:description>
		</showcase:info>

	</center>

</v:view>