<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view"
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt" 
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useResource="showcaseCoreResources"
	useController="imageController" 
	onLoad="imageController.onLoad" 
	title="${messages_image.title}">

	<center>
			<gwt:HTMLPanel id="panel">
				<gwt:label id="labelText" text="Clique sobre as imagens para ter informações"/>
				<br />
						<crux:storyboard id="imagePanel">
						<crux:image id="image1" styleName="imageStyleNormal1" onSelect="imageController.image1"/>
						<crux:image id="image2" styleName="imageStyleNormal2" onSelect="imageController.image2"/>
						<crux:image id="image3" styleName="imageStyleNormal3" onSelect="imageController.image3"/>
						</crux:storyboard>
				
				<gwt:HTMLPanel id="labelPanel">
					<gwt:label id="labelTitleImage" width="900px" styleName="imagelabelTitleImage"/>
					<br />
					<gwt:label id="labelInformImage" width="900px" styleName="imagelabelInformImage"/>
				</gwt:HTMLPanel>
			</gwt:HTMLPanel>

		<showcase:info title="${messages_image.title}">
			<showcase:description>
				<gwt:HTML id="htmlDescText"/>
			</showcase:description>
		</showcase:info>

	</center>

</v:view>