<v:view
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:faces="http://www.cruxframework.org/crux/smart-faces"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase" 
	useController="filterController" 
	onLoad="filterController.onLoad"
	title="Filter"> 

	<center>
		<!-- Component use sample -->
		<crux:styledPanel id="wrapper">
			<gwt:HTMLPanel id="wrapperChild" styleName="center">
				<faces:label id="labelInsertText" text="Enter a means of transport" />
				<br />
				<crux:filter id="filterWidget" text="Means of transport" animationEnabled="true" 
					autoSelectEnabled="true" focus="true" width="200px" limit="2"/>
			</gwt:HTMLPanel>
		</crux:styledPanel>

		<!-- Component description -->
		<showcase:info title="Filter" library="Widgets" ie-version="8+">
			<showcase:description>
				<gwt:HTML id="componentDescription" />
			</showcase:description>
		</showcase:info>
		
	</center>
</v:view>