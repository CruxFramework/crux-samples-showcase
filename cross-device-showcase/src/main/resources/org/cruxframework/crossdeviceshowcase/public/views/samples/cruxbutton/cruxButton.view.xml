<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="cruxButtonController" title="${messages_cruxButton.title}"
	onLoad="cruxButtonController.onLoad" > 

	<center>

		<crux:styledPanel id="panel1">
			<gwt:HTMLPanel id="html" styleName="center">
				<crux:button id="cruxBtn" text="${messages_cruxButton.cruxBtn}" />
				<hr />
				<h4>
					<gwt:label id="h4" text="${messages_cruxButton.h4}" />
				</h4>
				<div class="btn-Group">
					<gwt:radioButton name="color"
						onChange="cruxButtonController.setStateDefault" id="radioDefault"
						text="${messages_cruxButton.radioDefault}" checked="true"></gwt:radioButton>
					<gwt:radioButton name="color"
						onChange="cruxButtonController.setStateSuccess" id="radioSuccess"
						text="${messages_cruxButton.radioSuccess}"></gwt:radioButton>
					<gwt:radioButton name="color"
						onChange="cruxButtonController.setStateWarning" id="radioWarning"
						text="${messages_cruxButton.radioWarning}"></gwt:radioButton>
					<gwt:radioButton name="color"
						onChange="cruxButtonController.setStateError" id="radioError"
						text="${messages_cruxButton.radioError}"></gwt:radioButton>
				</div>
			</gwt:HTMLPanel>
		</crux:styledPanel>

		<showcase:info title="${messages_cruxButton.title}">
			<showcase:description>
				<gwt:HTML id="htmlDescText"/>
			</showcase:description>
		</showcase:info>

	</center>

</v:view>