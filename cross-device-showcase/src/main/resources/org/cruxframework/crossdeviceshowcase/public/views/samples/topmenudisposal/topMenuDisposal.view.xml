<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view"
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt" 
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="topMenuDisposalController" 
	onLoad="topMenuDisposalController.onLoad"
	title="TopMenuDisposal">

	<center>
	<!-- 		Component use sample  -->
		<crux:styledPanel id="panel" >
			<gwt:HTMLPanel id="innerPanel">
			 	<crux:topMenuDisposal id="menu" defaultView="viewHome">
				 	<crux:menuEntry targetView="viewHome" label="Home"/>
				 	<crux:menuEntry targetView="viewPurchase" label="My Orders"/>
			 	</crux:topMenuDisposal>
		 		<gwt:label id="explanationMobile" 
			 		text="TopMenuDisposal component is kind of View Container, and should not be applied within another View Container (menu of this application) in the mobile version." 
			 		styleName="explanationMobile"/>
		 	</gwt:HTMLPanel>
		</crux:styledPanel>
		
		<!-- 		Component description -->
		<showcase:info title="TopMenuDisposal">
			<showcase:description>
				<gwt:HTML id="componentDescription"/>
			</showcase:description>
		</showcase:info>

	</center>

</v:view>