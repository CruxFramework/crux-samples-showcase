<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:crux="http://www.cruxframework.org/crux" 
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:widgets="http://www.cruxframework.org/crux/widgets"
	xmlns:faces="http://www.cruxframework.org/crux/smart-faces"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	title="StyledPanel">

	<center>
		<!-- Component use sample -->
		<div id="panel" class="baseWrapper styledPanel">
			<widgets:styledPanel id="panel1" height="110px" width="200px" styleName="rs-left center">
				<faces:button id="btnSample" text="I am a button" />
			</widgets:styledPanel>
			<widgets:styledPanel id="panel2" height="110px" width="200px" styleName="rs-left center">
				<faces:label id="txtSample" text="I am a label" />
			</widgets:styledPanel>
			<gwt:simplePanel id="clear" styleName="clear"></gwt:simplePanel>
		</div>

		<!-- Component description -->
		<showcase:info 
			title="StyledPanel" 
			library="Widgets" 
			ie-version="8+"
			libraryPanel-visible="true"
			browserPanel-visible="true" 
			edge-visible="true" ie-visible="true" 
			chrome-visible="true" 
			firefox-visible="true" 
			safari-visible="true"
			description="${description_messages.styledPanelDescription}"/>

	</center>
</v:view>