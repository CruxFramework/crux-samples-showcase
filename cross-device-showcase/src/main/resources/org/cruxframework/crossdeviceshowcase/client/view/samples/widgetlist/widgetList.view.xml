<v:view 
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:v="http://www.cruxframework.org/view"
	xmlns:c="http://www.cruxframework.org/crux"
	xmlns:g="http://www.cruxframework.org/crux/gwt"
	xmlns:w="http://www.cruxframework.org/crux/widgets"
	xmlns:f="http://www.cruxframework.org/crux/smart-faces"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="widgetListController" 
	onLoad="widgetListController.onLoad" 
	title="Widget List"> 

	<style>
		.line > *
		{
			display: inline-block;
		}
	</style>

	<c:dataProvider id="dataProvider" dataObject="carWidgetList" onLoadData="widgetListController.onLoadData" autoLoadData="true" pageSize="5" selectionMode="single"/>
	
	<center>
		<!-- Component use sample -->
		<g:flowPanel id="panel">
			<f:widgetList id="widgetList" itemVar="car" dataProvider="dataProvider">
				<f:widget>
					<g:flowPanel id="wrapper" styleName="line">
						<f:image id="imageFlag" url="${showcaseCoreResources.carBrand}@{car.id:integerString}" />
						<f:label id="lblInfo" text="@{car.brand} - @{car.source} - @{car.year:integerString}"/>
					</g:flowPanel>
				</f:widget>
			</f:widgetList>
				    
		    <f:sequentialPager id="pagerWidgetList" dataProvider="dataProvider" visible="true" />
		</g:flowPanel>

		<!-- Component description -->
		<showcase:info title="Data Grid"
			libraryPanel-visible="true"
			browserPanel-visible="true" 
			library="SmartFaces"
			edge-visible="true" ie-visible="true" 
			ie-version="9+" 
			chrome-visible="true" 
			firefox-visible="true" 
			safari-visible="true"
			>
			<showcase:description>
				<g:HTML id="componentDescription" />
			</showcase:description>
		</showcase:info>
		
	</center>

</v:view>