<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:crux="http://www.cruxframework.org/crux" 
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:widgets="http://www.cruxframework.org/crux/widgets"
	xmlns:faces="http://www.cruxframework.org/crux/smart-faces"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="carouselController" 
	title="Carousel"> 

	<style>
		.line > *
		{
			display: inline-block;
		}
	</style>

	<crux:dataProvider id="dataProvider" dataObject="carCarousel" onLoadData="carouselController.onLoadData" autoLoadData="true" pageSize="5" selectionMode="single"/>
	
	<center>
		<!-- Component use sample -->
		<gwt:flowPanel id="panel">
			<faces:carousel id="carousel" itemVar="car" dataProvider="dataProvider">
				<faces:widget>
					<gwt:flowPanel id="wrapper" styleName="line">
<!-- 						<faces:image id="imageFlag" url="${showcaseCoreResources.carBrand}@{car.id:integerString}" /> -->
						<faces:label id="lblInfo" text="@{car.brand} - @{car.source}"/>
					</gwt:flowPanel>
				</faces:widget>
			</faces:carousel>
			
		    <faces:swapPager id="pagerCarousel" pageable="carousel" visible="true" animationBackward="bounce"/>
		</gwt:flowPanel>

		<!-- Component description -->
		<showcase:info title="Carousel"
			libraryPanel-visible="true"
			browserPanel-visible="true" 
			library="SmartFaces"
			edge-visible="true" ie-visible="true" 
			ie-version="9+" 
			chrome-visible="true" 
			firefox-visible="true" 
			safari-visible="true"
			>
			<showcase:description>
				<faces:HTML id="componentDescription" >
					${description_messages.carouselDescription}
				</faces:HTML>
			</showcase:description>
		</showcase:info>
		
	</center>

</v:view>