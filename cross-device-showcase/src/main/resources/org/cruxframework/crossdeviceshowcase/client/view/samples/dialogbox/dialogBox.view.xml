<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:faces="http://www.cruxframework.org/crux/smart-faces"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="dialogBoxController" 
	onLoad="dialogBoxController.onLoad"
	title="DialogBox"> 

	<center>
		<!-- Component use sample -->
		<crux:styledPanel id="panel1">
			<faces:button id="btnShowDialog" text="Show DialogBox" onSelect="dialogBoxController.openDialog"/>
		</crux:styledPanel>

		<!-- Component description -->
		<showcase:info title="DialogBox" library="Widgets" ie-version="8+">
			<showcase:description>
				<gwt:HTML id="componentDescription"/>
			</showcase:description>
		</showcase:info>
		
	</center>
</v:view>