<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:widgets="http://www.cruxframework.org/crux/widgets"
	xmlns:faces="http://www.cruxframework.org/crux/smart-faces"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	title="Slideshow"> 
	
	<center>
	<!-- 		Component use sample  -->
		<widgets:slideshow id="slideshow" layout="classic" width="100%" height="750px" loadOnStartup="true" >
			<widgets:service name="picasa">
				<widgets:param name="userID" value="114650528804514463329" />
				<widgets:param name="albumID" value="5951409748461918465" />
				<widgets:param name="imagesSize" value="400" />
				<widgets:param name="thumbnailsSize" value="48"/>
			</widgets:service>
		</widgets:slideshow>
		
		<!-- 		Component description -->
		<showcase:info 
			title="Slideshow" 
			library="Widgets" 
			ie-version="8+"
			libraryPanel-visible="true"
			browserPanel-visible="true" 
			edge-visible="true" ie-visible="true" 
			chrome-visible="true" 
			firefox-visible="true" 
			safari-visible="true">
			<showcase:description>
				<faces:HTML id="componentDescription" >
				  ${description_messages.slideShowDescription}
				</faces:HTML>
			</showcase:description>
		</showcase:info>

	</center>		
	
</v:view>