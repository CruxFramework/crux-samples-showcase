<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:crux="http://www.cruxframework.org/crux" 
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:widgets="http://www.cruxframework.org/crux/widgets"
	xmlns:faces="http://www.cruxframework.org/crux/smart-faces"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useResource="showcaseSamplesResources"
	useController="tabPanelController"
	onLoad="tabPanelController.onLoad"
	title="${messages_tabPanel.title}"> 

	<center>
		<div id="panel" class="baseWrapper tabPanel">
			<faces:tabPanel id="tabPanel">
				<faces:tab tabEnabled="true">
					<faces:tabWidget>
						<gwt:label id="label1" text="1" />
					</faces:tabWidget>
					<faces:panelContent>
						<gwt:flowPanel id="1">
							<faces:image id="colosseum" url="${showcaseSamplesResources.coliseu}" styleName="faces-Image imageNormal" tooltip="Colosseum"/>
						</gwt:flowPanel>
					</faces:panelContent>
				</faces:tab>
				<faces:tab>
					<faces:tabText>
						2
					</faces:tabText>
					<faces:panelContent>
						<gwt:flowPanel id="1">
							<faces:image id="tower" url="${showcaseSamplesResources.eiffel}" styleName="faces-Image imageNormal" tooltip="Eiffel Tower"/>
						</gwt:flowPanel>
					</faces:panelContent>
				</faces:tab>
				<faces:tab>
					<faces:tabHtml>
						<strong>3</strong>
					</faces:tabHtml>
					<faces:panelContent>
						<gwt:flowPanel id="1">
							<faces:image id="statue" url="${showcaseSamplesResources.liberty}" styleName="faces-Image imageNormal" tooltip="Statue of Liberty"/>
						</gwt:flowPanel>
					</faces:panelContent>
				</faces:tab>
			</faces:tabPanel>
		</div>

		<showcase:info 
			title="${messages_tabPanel.title}"
			libraryPanel-visible="true"
			browserPanel-visible="true" 
			library="Widgets"
			edge-visible="true" ie-visible="true" 
			ie-version="9+" 
			chrome-visible="true" 
			firefox-visible="true" 
			safari-visible="true"
			description="${description_messages.tabPanelDescription}"/>

	</center>		
	
</v:view>