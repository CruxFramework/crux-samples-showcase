<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:widgets="http://www.cruxframework.org/crux/widgets"
	xmlns:faces="http://www.cruxframework.org/crux/smart-faces"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="scrollBannerController" 
	onLoad="scrollBannerController.onLoad"
	title="ScrollBanner">

	<center>
	<!-- 		Component use sample  -->
		<gwt:verticalPanel id="panel">
			<widgets:scrollBanner id="scrollBanner" messageScrollingPeriod="5000" styleName="crux-ScrollBanner scrollBannerWidth">
				<widgets:message>Three Laws of Asimov</widgets:message>
				<widgets:message>1. A robot may not injure a human being or, through inaction, allow a human being to come to harm.</widgets:message>
				<widgets:message>2. A robot must obey the orders given it by human beings except where such orders would conflict with the First Law.</widgets:message>
				<widgets:message>3. A robot must protect its own existence as long as such protection does not conflict with the First or Second Law.</widgets:message>
			</widgets:scrollBanner>
		</gwt:verticalPanel>

		<!-- 		Component description -->
		<showcase:info 
			title="ScrollBanner" 
			library="Widgets" 
			ie-version="8+"
			libraryPanel-visible="true"
			browserPanel-visible="true" 
			edge-visible="true" ie-visible="true" 
			chrome-visible="true" 
			firefox-visible="true" 
			safari-visible="true">
			<showcase:description>
				<faces:HTML id="componentDescription" >
				  ${description_messages.scrollBannerDescription}
				</faces:HTML>
			</showcase:description>
		</showcase:info>

	</center>

</v:view>

