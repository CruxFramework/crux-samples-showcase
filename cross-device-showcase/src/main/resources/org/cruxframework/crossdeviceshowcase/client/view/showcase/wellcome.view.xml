<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:crux="http://www.cruxframework.org/crux" 
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:widgets="http://www.cruxframework.org/crux/widgets"
	xmlns:faces="http://www.cruxframework.org/crux/smart-faces"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	title="${messages_showcase.welcome}"> 
	
	<center>
		<div class="mainWelcome">
			<div class="wellcomeText wellcome-mg-bt">
			  <faces:label id="welcome" text="${messages_showcase.welcome}" styleName="textWelcome"/>
			  <faces:label id="info1" text="${messages_showcase.info1}" styleName="textInfo"/>
			  <faces:label id="info2" text="${messages_showcase.info2}" styleName="textInfo"/>
			  <faces:label id="info3" text="${messages_showcase.info3}" styleName="textInfo"/>
			</div>
			<div class="wellcomeText box-library tc wellcome-mg-bt">	
		   		<faces:label id="faces" text="SmartFaces" styleName="textInfo tc doc-title"/>
		   		<faces:label id="facesText" text="${messages_showcase.facesText}" styleName="textInfo"/>
            	<widgets:anchor id="faces-btn" styleName="faces-Button btn-link" href="http://files.cruxframework.org/components/smartfaces/index.html" text="SmartFaces"/>
	        </div>   
	        <div class="wellcomeText box-library fl-right tc">
		   		<faces:label id="widget" text="Widgets" styleName="textInfo tc doc-title"/>
		   		<faces:label id="widgetText" text="${messages_showcase.widgetText}" styleName="textInfo"/>
            	<widgets:anchor id="widget-btn" styleName="faces-Button btn-link" href="http://files.cruxframework.org/components/widgets/index.html" text="Widgets"/>
			</div>
		</div>
	</center>		
	
</v:view>