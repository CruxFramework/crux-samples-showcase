<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view"
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:faces="http://www.cruxframework.org/crux/smart-faces"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt" 
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="stackMenuController" 
	onLoad="stackMenuController.onLoad"
	title="StackMenu">

	<center>
	<!-- 		Component use sample  -->
		<gwt:HTMLPanel id="panel">
		 	<crux:stackMenu id="menu" onSelection="stackMenuController.selectedItem" >
		 		<crux:item label="CD" key="cd">
		 			<crux:item label="Blues" key="blues"></crux:item>
		 			<crux:item label="Jass" key="jass"></crux:item>
		 			<crux:item label="Pop" key="pop"></crux:item>
		 			<crux:item label="Rock" key="rock"></crux:item>
		 		</crux:item>
		 		<crux:item label="DVD" key="dvd">
			 		<crux:item label="Comedy" key="comedia">
			 			<crux:item label="Ace Ventura" key="aceVentura"></crux:item>
			 			<crux:item label="DespicableMe" key="despicableMe"></crux:item>
			 		</crux:item>
		 		</crux:item>
		 	</crux:stackMenu>
		</gwt:HTMLPanel>
		
		<!-- 		Component description -->
		<showcase:info title="StackMenu" library="Widgets" ie-version="8+">
			<showcase:description>
				<gwt:HTML id="componentDescription"/>
			</showcase:description>
		</showcase:info>

	</center>
</v:view>