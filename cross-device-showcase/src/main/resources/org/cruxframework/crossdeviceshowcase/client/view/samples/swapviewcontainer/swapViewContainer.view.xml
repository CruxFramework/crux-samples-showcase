<v:view
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:crux="http://www.cruxframework.org/crux" 
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:widgets="http://www.cruxframework.org/crux/widgets"
	xmlns:faces="http://www.cruxframework.org/crux/smart-faces"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase" 
	useController="swapViewContainerController"
	title="swapViewContainer"> 

	<center>
		<div id="panel" class="baseWrapper swapViewContainer">
				<faces:swapViewContainer id="viewContainer" styleName="faces-SwapViewContainer">
					<faces:view name="swapView1" active="true"/>
					<faces:view name="swapView2"/>
					<faces:view name="swapView3"/>
				</faces:swapViewContainer>
				<gwt:HTMLPanel id="buttonPanel">
					<faces:button id="backButton" text="Back" visible="false" styleName="faces-Button swapView-back-button"  onSelect="swapViewContainerController.previousView"/>
					<faces:button id="buyButton" text="Buy Now" styleName="faces-Button swapView-buy-button" onSelect="swapViewContainerController.nextView"/>
					<hr />
				</gwt:HTMLPanel>
				<gwt:flowPanel id="actionPanel">
					<faces:label id="labelList" text="Choice a animation type for the view transitions" styleName="faces-Label margin-top-bottom"/>
					<gwt:listBox id="listAnimation">
						<gwt:item label="Bounce" selected="true" value="bounce"/>
						<gwt:item label="Fade" value="fade"/>
						<gwt:item label="Flip X" value="flipX"/>
						<gwt:item label="Flip Y" value="flipY"/>
						<gwt:item label="Light Speed" value="lightSpeed"/>
						<gwt:item label="Roll" value="roll"/>
						<gwt:item label="Rotate" value="rotate"/>	
					</gwt:listBox>
				</gwt:flowPanel>
		</div>	

<!-- 		Component description -->
		<showcase:info 
			title="swapViewContainer" 
			library="SmartFaces" 
			ie-version="10+"
			libraryPanel-visible="true"
			browserPanel-visible="true" 
			edge-visible="true" ie-visible="true" 
			chrome-visible="true" 
			firefox-visible="true" 
			safari-visible="true"
			description="${description_messages.swapViewContainerDescription}"/>

	</center>

</v:view>