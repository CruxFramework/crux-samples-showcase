<v:view
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:crux="http://www.cruxframework.org/crux" 
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:widgets="http://www.cruxframework.org/crux/widgets"
	xmlns:faces="http://www.cruxframework.org/crux/smart-faces"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="filterController" 
	onLoad="filterController.onLoad"
	title="Filter"> 

	<center>
		<!-- Component use sample -->
		<widgets:styledPanel id="wrapper">
			<gwt:HTMLPanel id="wrapperChild" styleName="center">
				<faces:label id="labelInsertText" text="Enter a means of transport" />
				<br />
				<widgets:filter id="filterWidget" text="Means of transport" animationEnabled="true" 
					autoSelectEnabled="true" focus="true" width="200px" limit="2"/>
			</gwt:HTMLPanel>
		</widgets:styledPanel>

		<!-- Component description -->
		<showcase:info 
			title="Filter" 
			library="Widgets" 
			ie-version="8+"
			libraryPanel-visible="true"
			browserPanel-visible="true" 
			edge-visible="true" ie-visible="true" 
			chrome-visible="true" 
			firefox-visible="true" 
			safari-visible="true"
			description="${description_messages.filterDescription}"/>
		
	</center>
</v:view>