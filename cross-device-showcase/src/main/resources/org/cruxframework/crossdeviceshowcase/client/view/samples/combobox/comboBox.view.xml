<v:view
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:faces="http://www.cruxframework.org/crux/smart-faces"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase" 
	useController="comboBoxController"
	onLoad="comboBoxController.onLoad"
	title="ComboBox"> 

	<style>
		.line > *
		{
			display: inline-block;
		}
	</style>
	
	<core:dataProvider id="dataProvider" dataObject="countryComboBox" onLoadData="comboBoxController.onLoadData" autoLoadData="true" pageSize="5" selectionMode="single"/>

	<center>
		<crux:styledPanel id="mainPanel">
			<gwt:flowPanel id="innerPanel">
				<faces:comboBox id="comboBox" dataProvider="dataProvider" itemVar="country">
				<faces:options value="@{country.id:integerString}" text="@{country.name}">
					<faces:widget>
						<gwt:flowPanel id="wrapper" styleName="line">
							<faces:image id="imageFlag" url="${showcaseCoreResources.flag}@{country.id:integerString}" />
							<faces:label id="lblNameCapital" text="@{country.name} - @{country.capital}"/>
						</gwt:flowPanel>
					</faces:widget>
				</faces:options>
				</faces:comboBox>
			</gwt:flowPanel>
		</crux:styledPanel>
		
		<!-- Component description -->
		<showcase:info 
			title="ComboBox"
			libraryPanel-visible="true"
			browserPanel-visible="true" 
			library="SmartFaces"
			edge-visible="true" ie-visible="true" 
			ie-version="9+" 
			chrome-visible="true" 
			firefox-visible="true" 
			safari-visible="true">
			<showcase:description>
				<gwt:HTML id="componentDescription" />
			</showcase:description>
		</showcase:info>

	</center>

</v:view>