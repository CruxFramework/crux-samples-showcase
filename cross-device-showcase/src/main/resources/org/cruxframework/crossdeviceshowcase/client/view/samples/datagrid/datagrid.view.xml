<v:view 
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:v="http://www.cruxframework.org/view"
	xmlns:c="http://www.cruxframework.org/crux"
	xmlns:g="http://www.cruxframework.org/crux/gwt"
	xmlns:w="http://www.cruxframework.org/crux/widgets"
	xmlns:f="http://www.cruxframework.org/crux/smart-faces"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="dataGridController" 
	onLoad="dataGridController.onLoad" 
	title="Data Grid"> 

	<c:dataProvider id="dataProviderPerson" dataObject="personGrid" onLoadData="dataGridController.onLoadData" autoLoadData="true" pageSize="5" selectionMode="single"/>

	<center>
		<!-- Component use sample -->
		<g:flowPanel id="panel">
			 <f:dataGrid id="grid" itemVar="personGrid" dataProvider="dataProviderPerson" rowSelectStrategy="radioButton">
				<f:columnGroup key="nameLastName" header="${datagrid_messages.basicinfo}">
					<f:column key="name" header="${datagrid_messages.name}" property="@{personGrid.name}" sortable="true"/>
<!-- 		    		<f:editor> -->
<!-- 		    			<f:widget><g:textBox id="name" value="@{personGrid.name}"/></f:widget> -->
<!-- 		    		</f:editor> -->
					<f:column key="lastName" header="${datagrid_messages.lastName}" property="@{personGrid.lastName}" sortable="true"/>
				</f:columnGroup>
		    	<f:column key="age" header="${datagrid_messages.age}" property="@{personGrid.age:integerString}" sortable="true"/>
		    	<f:column key="profession" header="${datagrid_messages.profession}" property="@{personGrid.profession}" sortable="true" detailOnSize="small"/>
		    </f:dataGrid>
		    
		    <f:sequentialPager id="pagerGridPerson" dataProvider="dataProviderPerson" visible="true" />
		</g:flowPanel>

		<!-- Component description -->
		<showcase:info title="Data Grid"
			libraryPanel-visible="true"
			browserPanel-visible="true" 
			library="SmartFaces"
			ie-visible="true" 
			ie-version="9+" 
			chrome-visible="true" 
			firefox-visible="true" 
			safari-visible="true"
			>
			<showcase:description>
				<g:HTML id="componentDescription" />
			</showcase:description>
		</showcase:info>
		
	</center>

</v:view>