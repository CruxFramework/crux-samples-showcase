<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:crux="http://www.cruxframework.org/crux" 
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:widgets="http://www.cruxframework.org/crux/widgets"
	xmlns:faces="http://www.cruxframework.org/crux/smart-faces"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	onLoad="numberTextBoxController.onLoad" 	
	useController="numberTextBoxController" 
	title="NumberTextBox">

	<center>
	<!-- 		Component use sample  -->
		<div id="panel" class="baseWrapper numberTextBox">
			<faces:label id="labelText" text="Enter a number"/>
			<br />
			<faces:numberBox id="boxNumber" value="44" />
			<hr />
			<faces:label id="labelMaxlength" text="Choose the limit for entering the numbers"/>
			<br />
			<div id="panelBoard" class="radioPanel">
				<gwt:radioButton height="10px" id="radioButton09" name="value" text="0 to 9" onChange="numberTextBoxController.maxLength"/>
				<gwt:radioButton height="10px" id="radioButton099" name="value" text="0 to 99" onChange="numberTextBoxController.maxLength"/>
				<gwt:radioButton height="10px" id="radioButton0999" name="value" text="0 to 999" checked="true" onChange="numberTextBoxController.maxLength" />
				<gwt:radioButton height="10px" id="radioButtonFree" name="value" text="Free" onChange="numberTextBoxController.maxLength"/>
			</div>
		</div>

		<!-- 		Component description -->
		<showcase:info 
			title="NumberTextBox" 
			library="Widgets" 
			ie-version="8+"
			libraryPanel-visible="true"
			browserPanel-visible="true" 
			edge-visible="true" ie-visible="true" 
			chrome-visible="true" 
			firefox-visible="true" 
			safari-visible="true"
			description="${description_messages.numberTextBoxDescription}"/>

	</center>
</v:view>