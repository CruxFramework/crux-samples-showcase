	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:core="http://www.cruxframework.org/crux" 
	xmlns:crux="http://www.cruxframework.org/crux/widgets"
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	useResource="showcaseCoreResources"
	title="Simple View 3"> 
	
	<center>
		<crux:styledPanel id="parentPanel" styleName="horizontalSwapViewPanel3">
			<gwt:HTMLPanel id="panel">
				<gwt:label id="labelViewTitle" text="${messages_horizontalSwapView3.title}" styleName="horizontalSwapView3title"/>
				<br />
				<crux:image id="image" styleName="horizontalSwapViewImage3"/>
				<br />
				<gwt:label id="labelViewText" text="${messages_horizontalSwapView3.labelTextView}" styleName="horizontalSwapView3text"/>
			</gwt:HTMLPanel>
		</crux:styledPanel>
	</center>	
</v:view>