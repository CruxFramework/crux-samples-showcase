<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:crux="http://www.cruxframework.org/crux" 
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:widgets="http://www.cruxframework.org/crux/widgets"
	xmlns:faces="http://www.cruxframework.org/crux/smart-faces"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useResource="showcaseSamplesResources"
	title="PromoBanner"> 

	<center>
	<!-- 		Component use sample  -->
	<div id="panel" class="baseWrapper promoBanner">
		<widgets:promoBanner id="promobanner"
			largeBannersHeight="312px" smallBannersHeight="200px"
			autoTransitionInterval="500000" transitionDuration="450" styleName="promoBannerWidth">
			<widgets:banner buttonLabel=""
				title="Life" text="Hurry to live well and think that every day is, in itself, a life. (Seneca)"
				image="${showcaseSamplesResources.banner1promo}" styleName="messagePanel" />
			<widgets:banner buttonLabel=""
				title="Dream and live" text="Dream as if you'll live forever, live as if you were to die tomorrow. (James Dean)"
				image="${showcaseSamplesResources.banner2promo}" />
			<widgets:banner buttonLabel=""
				title="Live" text="To live is the rarest thing in the world. Most people exist, thatÂ´s all.  (Oscar Wilde)"
				image="${showcaseSamplesResources.banner3promo}" />
		</widgets:promoBanner>
	</div>
		<!-- 		Component description -->
		<showcase:info 
			title="PromoBanner" 
			library="Widgets" 
			ie-version="8+"
			libraryPanel-visible="true"
			browserPanel-visible="true" 
			edge-visible="true" ie-visible="true" 
			chrome-visible="true" 
			firefox-visible="true" 
			safari-visible="true"
			description="${description_messages.promoBannerDescription}"/>

	</center>

</v:view>