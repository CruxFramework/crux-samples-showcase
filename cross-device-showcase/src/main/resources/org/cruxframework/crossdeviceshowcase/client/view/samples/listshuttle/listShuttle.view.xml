<v:view 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:v="http://www.cruxframework.org/view" 
	xmlns:crux="http://www.cruxframework.org/crux" 
	xmlns:gwt="http://www.cruxframework.org/crux/gwt"
	xmlns:widgets="http://www.cruxframework.org/crux/widgets"
	xmlns:faces="http://www.cruxframework.org/crux/smart-faces"
	xmlns:showcase="http://www.cruxframework.org/templates/showcase"
	useController="listShuttleController" 
	onLoad="listShuttleController.onLoad"
	title="ListShuttle">

	<center>
		<!-- Component use sample -->
		<div id="panel" class="baseWrapper listShuttle center">
			<faces:label id="labelChoosePlayers" text="Build your team with players available:" />
			<widgets:listShuttle id="listShuttle" availableHeader="Availables" selectedHeader="Scaled" />
		</div>

		<!-- Component description -->
		<showcase:info 
			title="ListShuttle" 
			library="Widgets" 
			ie-version="8+"
			libraryPanel-visible="true"
			browserPanel-visible="true" 
			edge-visible="true" ie-visible="true" 
			chrome-visible="true" 
			firefox-visible="true" 
			safari-visible="true"
			description="${description_messages.listShuttleDescription}"/>

	</center>
</v:view>